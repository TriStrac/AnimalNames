<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalDetailsActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animal Details"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/animalDetailsBackButton"
        app:layout_constraintEnd_toEndOf="@+id/animalNameTextView"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/animalDetailsBackButton"
        app:layout_constraintTop_toTopOf="@+id/animalDetailsBackButton" />

    <Button
        android:id="@+id/animalDetailsBackButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="@+id/animalNameTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/animalNameTextView"
        android:layout_width="348dp"
        android:layout_height="27dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/animalDetailsTextView"
        android:layout_width="348dp"
        android:layout_height="400dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/animalNameTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/animalNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/animalNameTextView" />

    <Button
        android:id="@+id/blockAnimalButton"
        android:layout_width="351dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:text="Block Animal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/animalDetailsTextView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/animalDetailsTextView"
        app:layout_constraintTop_toBottomOf="@+id/animalDetailsTextView"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
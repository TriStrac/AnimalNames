<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalNamesActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Animal names from A to Z"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/_dynamic"
        app:layout_constraintStart_toStartOf="@+id/animalNamesList"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/animalNamesList"
        android:layout_width="350dp"
        android:layout_height="583dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/manageBlockAnimalsButton"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_marginBottom="40dp"
        android:text="Manage Block Animals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/animalNamesList"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/animalNamesList"
        app:layout_constraintTop_toBottomOf="@+id/animalNamesList" />

</androidx.constraintlayout.widget.ConstraintLayout>